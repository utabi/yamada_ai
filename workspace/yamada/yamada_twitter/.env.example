# 山田Twitter環境変数設定例
# 本番環境では .env.production として使用

# Node.js環境設定
NODE_ENV=production
PORT=3000

# CORS設定（カンマ区切りで複数ドメイン指定可能）
ALLOWED_ORIGINS=https://yamada-twitter.example.com,https://www.yamada-twitter.example.com

# レート制限設定（本番環境では厳しく設定）
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
TWEET_LIMIT_WINDOW_MS=60000
TWEET_LIMIT_MAX_REQUESTS=10

# データベース設定
DB_PATH=/app/backend/database/yamada_twitter.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24

# ログ設定
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs/yamada-twitter.log

# セキュリティ設定
SESSION_SECRET=your-super-secure-random-string-here-change-this
HELMET_CSP_ENABLED=true

# WebSocket設定
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

# 機能フラグ
FEATURE_HASHTAGS_ENABLED=true
FEATURE_IMAGE_UPLOAD_ENABLED=false
FEATURE_REGISTRATION_ENABLED=true

# 外部サービス（今後の拡張用）
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# 管理機能
ADMIN_ENABLED=false
ADMIN_TOKEN=

# パフォーマンス設定
COMPRESSION_ENABLED=true
STATIC_FILE_CACHE_DURATION=86400

# メンテナンス
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=サーバーメンテナンス中です